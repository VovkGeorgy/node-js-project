<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
</head>
<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <% if (products.length > 0) { %>
        <ul class="cart-items-list">
            <hr>
            <% products.forEach( p => { %>
                <li class="cart-item">
                    <h2 class="cart-item__title"> <%= p.productId.title %></h2>
                    <h2 class="cart-item__quantity">Quantity: <%= p.quantity %></h2>
                    <form class="cart-item__actions" action="/cart-delete-item" method="post">
                        <input type="hidden" value="<%= p.productId._id %>" name="productId">
                        <button class="btn" type="submit">Delete</button>
                    </form>
                </li>
                <hr>
            <% }) %>
        </ul>
        <form class="cart-item-list__actions" action="/create-order" method="post">
            <!--            <input type="hidden" value="" name="productId">-->
            <button class="btn" type="submit">Order now!</button>
        </form>
    <% } else { %>
        <h1>No Products in Cart!</h1>
    <% } %>
</main>
<%- include('../includes/end.ejs') %>
